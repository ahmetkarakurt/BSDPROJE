            <Field Name="YERI" Type="String" />
            <Field Name="TIPI" Type="String" />
            <Field Name="PLASIYER_KODU" Type="String" />
            <Field Name="TARIH" Type="DateTime" />
          </View>
        </DataSet>
      </ResultSchema>
      <ConnectionOptions CloseConnection="true" />
      <CalculatedFields>
        <CalculatedField Name="Verilen-Durumu" Expression="[VERILEN_CARI_ISIM] +' Dumrumu : '+ [DURUM] " DataMember="CustomSqlQuery" />
      </CalculatedFields>
    </SqlDataSource>
  </DataSources>
  <Items>
