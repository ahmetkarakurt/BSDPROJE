<?xml version="1.0" encoding="utf-8"?>
<Dashboard>
  <Title Text="Cek Senet Banka Raporu " />
  <DataSources>
    <SqlDataSource Name="CustomSqlQuery" ComponentName="sqlDataSource1">
      <Connection Name="eenwindConnection" FromAppConfig="true" />
      <Query Type="CustomSqlQuery" Name="CustomSqlQuery">
        <Sql>select * from ZZZ_CEKSEN_SONISLEM where YEAR(VADETRH)=YEAR(GETDATE())</Sql>
      </Query>
      <ResultSchema>
        <DataSet Name="CustomSqlQuery">
          <View Name="CustomSqlQuery">
            <Field Name="ID" Type="Guid" />
            <Field Name="SC_NO" Type="String" />
            <Field Name="VADETRH" Type="DateTime" />
            <Field Name="SC_GIRTRH" Type="DateTime" />
            <Field Name="SC_CIKTRH" Type="DateTime" />
            <Field Name="VERILEN_CARI" Type="String" />
            <Field Name="VERILEN_CARI_ISIM" Type="String" />
            <Field Name="VEREN_CARI" Type="String" />
            <Field Name="VEREN_CARI_ISIM" Type="String" />
            <Field Name="TUTAR" Type="Decimal" />
