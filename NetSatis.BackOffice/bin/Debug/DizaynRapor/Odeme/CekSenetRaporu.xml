        <Row DefaultId="DataItem3" />
        <Row DefaultId="DataItem4" />
      </Rows>
      <Values>
        <Value DefaultId="DataItem0" />
      </Values>
    </Pivot>
    <ComboBox ComponentName="comboBoxDashboardItem1" Name="Tipi" DataSource="sqlDataSource1" DataMember="CustomSqlQuery">
