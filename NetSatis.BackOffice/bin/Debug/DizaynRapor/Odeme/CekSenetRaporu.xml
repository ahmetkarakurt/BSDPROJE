        <Dimension DataMember="VADETRH" DateTimeGroupInterval="Month" DefaultId="DataItem1" />
        <Dimension DataMember="VADETRH" DateTimeGroupInterval="Day" DefaultId="DataItem2" />
        <Dimension DataMember="BANKA_YER" DefaultId="DataItem3" />
