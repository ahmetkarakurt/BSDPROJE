      <Query Type="CustomSqlQuery" Name="CustomSqlQuery">
        <Sql>SELECT        MF.AY_KODU, MF.FISNO, MF.SIRA, MF.HES_KOD, MF.TARIH, MF.BA, MF.ACIKLAMA, MF.TUTAR, MF.MIKTAR, MF.REF_KOD, MF.ACIKLAMA2, MF.DOVIZTIP, MF.DOVIZTUT, MF.FIRMADOVTIP, MF.FIRMADOVTUT, 
                         MF.UPDATEKODU, MF.EVRAKTARIHI, MF.HESAPISMI, MF.YONTEM, MF.ENTEGREFKEY, MF.YEDEK1, MF.YEDEK2, MF.YEDEK3, MF.YEDEK4, MF.YEDEK5, MF.YEDEK6, MF.YEDEK7, MF.YEDEK8, MF.YEDEK9, MF.YEDEK10, 
                         MF.YEDEK11, MF.PROJE_KODU, MF.SUBE_KODU, MF.SUBELI, MF.HARKONTROL, MF.KAYITYAPANKUL, MF.KAYITTARIHI, MF.DUZELTMEYAPANKUL, MF.DUZELTMETARIHI, MF.BFORMCARIKODU, MF.BFORMBELGENO, 
                         MF.GUID, MF.ISLEMSIRANO, MF.KAYITSEKLI, MF.MGECDK, MF.KULL_ID, MF.ISLEMTIPI, MF.EDEFTER_SIRA, KUR.ISIM AS CLC_FXNAME, FIRMAKUR.ISIM AS CLC_COMPANYFXNAME, MP.HS_ADI AS CLC_ACCOUNTNAME, 
                         PR.PROJE_ACIKLAMA AS CLC_PROJECTDESC, MR.GRUP_ISIM AS CLC_REFDESC, MFE.BELGE_TIPI, MFE.BELGE_NO, MFE.S_YEDEK1, (CASE BA WHEN '1' THEN 'B' WHEN '2' THEN 'A' ELSE '' END) AS DURUM, 
                         (CASE KAYITSEKLI WHEN 'T' THEN 'Ters' ELSE 'Düz' END) AS KAYITDURUM
FROM            dbo.TBLMUHFIS AS MF WITH (NOLOCK) LEFT OUTER JOIN
                         NETSIS.dbo.KUR AS KUR WITH (NOLOCK) ON MF.DOVIZTIP = KUR.SIRA LEFT OUTER JOIN
                         NETSIS.dbo.KUR AS FIRMAKUR WITH (NOLOCK) ON MF.FIRMADOVTIP = FIRMAKUR.SIRA LEFT OUTER JOIN
                         dbo.TBLMUPLAN AS MP WITH (NOLOCK) ON MF.HES_KOD = MP.HESAP_KODU LEFT OUTER JOIN
                         dbo.TBLPROJE AS PR WITH (NOLOCK) ON MF.PROJE_KODU = PR.PROJE_KODU LEFT OUTER JOIN
                         dbo.TBLMUHAREF AS MR WITH (NOLOCK) ON MF.REF_KOD = MR.GRUP_KOD LEFT OUTER JOIN
                         dbo.TBLMUHFISEK AS MFE WITH (NOLOCK) ON MF.AY_KODU = MFE.MUHAY_KODU AND MF.FISNO = MFE.MUHFISNO AND MF.SIRA = MFE.MUHSIRA</Sql>
      </Query>
