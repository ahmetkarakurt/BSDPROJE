      <Query Type="CustomSqlQuery" Name="Query_1">
        <Sql>SELECT        dbo.TBLESNSTMAS.STOKKODU, dbo.TBLSTSABIT.STOK_ADI, SUM(dbo.TBLSTHAR.STHAR_GCMIK) AS Expr1, dbo.TBLSTHAR.STHAR_TARIH
FROM            dbo.TBLESNSTMAS LEFT OUTER JOIN
                         dbo.TBLSTHAR ON dbo.TBLESNSTMAS.STOKKODU = dbo.TBLSTHAR.STOK_KODU LEFT OUTER JOIN
                         dbo.TBLSTSABIT ON dbo.TBLESNSTMAS.STOKKODU = dbo.TBLSTSABIT.STOK_KODU
WHERE        (dbo.TBLESNSTMAS.MAMULMU = 'E') AND (dbo.TBLESNSTMAS.YAPKOD IS NULL) AND (dbo.TBLSTHAR.STHAR_GCKOD = 'G') AND (dbo.TBLSTHAR.STHAR_HTUR = 'C')
GROUP BY dbo.TBLESNSTMAS.STOKKODU, dbo.TBLSTSABIT.STOK_ADI, dbo.TBLSTHAR.STHAR_TARIH</Sql>
